{% extends "layouts/admin.twig" %}

{% block title %} #{{ service.id }} | {{ service.name }} {% endblock %}


{% block content %}
    <div class="mb-3">
        <a href="{{ route("dashboard.services.index") }}" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
    <div class="card">
        <div class="card-body">
            <form method="post" action="{{ route("dashboard.services.update", {id : service.id}) }}" class="mb-3" enctype="multipart/form-data">
                {{ method("patch") }}
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{ old("name", service.name) }}">

                            {% if error("name") %}
                                <div class=invalid-feedback">{{ error("name") }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" name="description" id="tiny" cols="30" rows="10">{{ old("description", service.description) }}</textarea>

                            {% if error("description") %}
                                <div class=invalid-feedback">{{ error("description") }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save</button>
                    </div>
                </div>
            </form>

            <form method="post" action="{{ route('dashboard.services.delete', {'id': service.id}) }}">
                {{ method("delete") }}

                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
            </form>
        </div>
    </div>

{% endblock %}


