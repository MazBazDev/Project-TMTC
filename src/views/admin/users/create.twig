{% extends "layouts/admin.twig" %}

{% block title %} Create user {% endblock %}

{% block content %}
    <div class="mb-3">
        <a href="{{ route("dashboard.users.index") }}" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
    <div class="card">
        <div class="card-body">
            <form method="post" action="{{ route("dashboard.users.store") }}" class="mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="firstname">First name</label>
                            <input type="text" class="form-control" id="firstname" name="firstname" value="{{ old("firstname") }}">

                            {% if error("firstname") %}
                                <div class=invalid-feedback">{{ error("firstname") }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="lastname">Last name</label>
                            <input type="text" class="form-control" id="lastname" name="lastname" value="{{ old("lastname") }}">

                            {% if error("lastname") %}
                                <div class=invalid-feedback">{{ error("lastname") }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="{{ old("email") }}">

                            {% if error("email") %}
                                <div class=invalid-feedback">{{ error("email") }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" value="{{ old("password") }}">

                            {% if error("password") %}
                                <div class=invalid-feedback">{{ error("password") }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="admin" name="admin" {{ checked(old("admin")) }}>
                            <label class="custom-control-label" for="admin">Admin</label>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}


