{% extends "layouts/admin.twig" %}

{% block title %} Users {% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First name</th>
                        <th scope="col">Last name</th>
                        <th scope="col">Role</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>

                        {% if user.admin %}
                            <td><span class="badge badge-warning">Admin</span></td>
                        {% else %}
                            <td><span class="badge badge-primary">User</span></td>
                        {% endif %}

                        <td class="d-flex gap-3">
                            <a href="/user/{{ user.id }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                            <form method="post" action="/user/{{ user.id }}/delete">
                                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>

{% endblock %}


